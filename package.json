{
  "name": "soomchat",
  "description": "A Zoom clone application built on top of React, Express, WebRTC and Web Sockets for personal and family use.",
  "author": "Pablo Deeleman",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon -w src/server -x tsx src/server/main.ts",
    "start": "NODE_ENV=production yarn tsx src/server/main.ts",
    "build": "yarn vite build"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.4.1",
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "socket.io": "4.8.1",
    "socket.io-client": "4.8.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-express": "*"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.2",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "nodemon": "^3.1.10"
  }
}
