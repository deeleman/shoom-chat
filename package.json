{
  "name": "shoom",
  "author": "Pablo Deeleman",
  "description": "A Zoom clone application built on top of React, Express, WebRTC and Web Sockets for personal use.",
  "private": true,
  "version": "0.0.0",
  "main": "dist/server/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"yarn dev:server\" \"yarn dev:client\"",
    "dev:server": "nodemon -w src/server/server -x tsx src/server/server.ts",
    "dev:client": "vite",
    "build": "yarn build:client && yarn build:server",
    "build:server": "tsc --project src/server/tsconfig.json",
    "build:client": "vite build",
    "start": "node dist/server/server.js",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@twilio-paste/core": "^21.3.0",
    "@twilio-paste/icons": "^13.1.0",
    "@vitejs/plugin-react": "^4.5.0",
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "socket.io": "4.8.1",
    "socket.io-client": "4.8.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.3"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-client": "^3.0.0",
    "@vitest/coverage-v8": "3.1.4",
    "concurrently": "^8.2.2",
    "jest-dom": "^4.0.0",
    "nodemon": "^3.1.10",
    "vitest": "^3.1.4"
  }
}
