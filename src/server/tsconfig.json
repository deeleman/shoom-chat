{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "es2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "../../dist/server",
    "rootDir": ".",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "jsx": "preserve",
    "types": ["node"]
  },
  "include": ["server.ts", "./services"],
  "exclude": ["../client/main.tsx", "../client/App.tsx", "**/*.css", "../../vite.config.ts"]
}